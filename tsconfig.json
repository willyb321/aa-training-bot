{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2015",
		"preserveConstEnums": true,
		"removeComments": true,
		"inlineSourceMap": true,
		"sourceRoot": "src/",
		"outDir": "dist/"
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules"
	]
}
